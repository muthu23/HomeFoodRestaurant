<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin_half"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin_half"
    android:elevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delivery_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_delivery_man"
                    android:drawablePadding="@dimen/activity_vertical_margin_half"
                    android:drawableStart="@drawable/ic_delivery_man"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="@dimen/activity_vertical_margin_half"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_shop"
                    android:drawablePadding="@dimen/activity_vertical_margin_half"
                    android:drawableStart="@drawable/ic_shop"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="@dimen/activity_vertical_margin_half"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/status_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/completed_tag"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_4sdp"
                        android:paddingEnd="@dimen/activity_vertical_margin_half"
                        android:paddingStart="@dimen/activity_vertical_margin_half"
                        android:paddingTop="@dimen/_4sdp"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/text_small" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/total_amnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="@dimen/activity_vertical_margin_half"
                    android:gravity="end"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin_half">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small" />

            <TextView

                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_small" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
