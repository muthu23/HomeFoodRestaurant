<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_vertical_margin_half"
    android:layout_marginStart="@dimen/activity_vertical_margin_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin_half"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_gravity="center|top"
            android:src="@drawable/ic_place_holder_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_2sdp"
                android:text="Spicy Veg Piza"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium" />


            <TextView
                android:id="@+id/addons_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingStart="@dimen/_4sdp"
                android:text="Spicy Veg Piza, Cheesse, Nuts..."
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/no_addons_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingStart="@dimen/_4sdp"
                android:text="@string/no_addons"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/text_small" />

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/close_img"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_4sdp"
        android:src="@drawable/ic_close" />

</RelativeLayout>