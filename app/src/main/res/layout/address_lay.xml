<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/min_amount"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <LinearLayout
        android:id="@+id/llMinAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tvMinAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/_6sdp"

            android:inputType="numberDecimal"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/arrow_down_float"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            android:tint="@color/grey" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/offer_in_percentage"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <com.homefood.restaurant.customviews.SuffixEditText
        android:id="@+id/etOfferInPercentage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:tag=" %"
        android:text="0"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/maximum_delivery_time"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <LinearLayout
        android:id="@+id/llMaxDeliveryTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:orientation="horizontal">

        <com.homefood.restaurant.customviews.SuffixEditText
            android:id="@+id/tvMaxTimeDelivery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/_6sdp"
            android:tag=" Mins"
            android:text="30"
            android:inputType="number"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/arrow_down_float"
            android:layout_marginEnd="@dimen/_10sdp"
            android:tint="@color/grey" />-->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/description"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:imeOptions="actionNext"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLength="255"
        android:padding="@dimen/_6sdp"
        android:textColorHint="@color/colorSecondaryText"
        android:gravity="start"
        android:hint="@string/description"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/address"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <LinearLayout
        android:id="@+id/address_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/_6sdp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_medium" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:background="@color/medium_grey"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_location" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="@string/landmark"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_tiny" />

    <EditText
        android:id="@+id/et_landmark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/edit_text_rounded_corner_bg"
        android:imeOptions="actionDone"
        android:inputType="textPostalAddress"
        android:maxLines="1"
        android:padding="@dimen/_6sdp"
        android:singleLine="true"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_medium" />

</LinearLayout>