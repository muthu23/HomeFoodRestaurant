                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/activity_vertical_margin_half"
                            android:layout_marginRight="@dimen/activity_vertical_margin_half"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                                android:fontFamily="@font/nunito_semi_bold"
                                android:text="@string/open_time"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_tiny" />

                            <TextView
                                android:id="@+id/sun_txt_open_time"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_size"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_rounded_corner_bg"
                                android:drawableEnd="@drawable/ic_clock"
                                android:gravity="center_vertical"
                                android:hint="@string/clock_timer"
                                android:text="@string/clock_timer"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                            android:layout_marginStart="@dimen/activity_vertical_margin_half"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                                android:fontFamily="@font/nunito_semi_bold"
                                android:text="@string/close_time"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="@dimen/text_tiny" />

                            <TextView
                                android:id="@+id/sun_txt_close_time"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edit_text_size"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_rounded_corner_bg"
                                android:drawableEnd="@drawable/ic_clock"
                                android:gravity="center_vertical"
                                android:hint="@string/clock_timer"
                                android:text="@string/clock_timer"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_button"
        android:text="@string/confirm"
        android:layout_above="@id/LLBottomLay"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/LLBottomLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="@string/do_have_an_account"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_tiny" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingStart="@dimen/_4sdp"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/text_tiny" />

    </LinearLayout>

</RelativeLayout>
